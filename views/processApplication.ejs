<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Application Confirmation</title>
    <style>
      .label {
        font-weight: bold;
      }

      #timestamp {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Applicants Data</h1>

    <div class="applicant-info">
      <% if (applicant) { %> <% if (Array.isArray(applicant)) { %> <%
      applicant.forEach((app) => { %>
      <span class="label">Name:</span>
      <span class="data"><%= app.name %></span><br />

      <span class="label">Email:</span>
      <span class="data"><%= app.email %></span><br />

      <span class="label">Weight:</span>
      <span class="data"><%= app.weight %></span><br />
      <span class="label">Lift:</span>
      <span class="data"><%= app.lift %></span><br />

      <span class="label">Background Information:</span><br />
      <span class="data"><%= app.background %></span><br />

      <hr />
      <% }); %> <% } else { %>
      <span class="label">Name:</span>
      <span class="data"><%= applicant.name %></span><br />

      <span class="label">Email:</span>
      <span class="data"><%= applicant.email %></span><br />

      <span class="label">Weight:</span>
      <span class="data"><%= applicant.weight %></span><br />
      <span class="label">Lift:</span>
      <span class="data"><%= applicant.lift %></span><br />

      <span class="label">Background Information:</span><br />
      <span class="data"><%= applicant.background %></span><br />

      <hr />
      <% } %> <% } else { %>
      <p>No applicants found.</p>
      <% } %>
    </div>

    
    <a href="/home">HOME</a>

    
  </body>
</html>
